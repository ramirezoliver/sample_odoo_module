<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <menuitem name="Library" id="library_root_menu"/>

    <record model="ir.actions.act_window" id="action_library_book">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <menuitem name="Books" id="library_book_menu" parent="library_root_menu"
              sequence="1" action="action_library_book"/>


    <record model="ir.ui.view" id="library_book_view_form">
        <field name="name">library.book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Book Title"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="release_year"/>
                                <field name="is_loaned"/>
                            </group>
                        </page>
                        <page string="Loaned Books">
                            <field name="loaned_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="library_book_view_kanban" model="ir.ui.view">
        <field name="name">library.book.view.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('library.book', 'image', record.id.raw_value)" alt="Book"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <ul>
                                    <li><strong>Release Year: <field name="release_year"></field></strong></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>