<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <menuitem name="Library" id="library_root_menu"/>

    <record model="ir.actions.act_window" id="action_library_book">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Books" id="library_book_menu" parent="library_root_menu"
              sequence="1" action="action_library_book"/>


    <record model="ir.ui.view" id="library_book_view_form">
        <field name="name">library.book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <h1>
                        <field name="title" placeholder="Book Title"/>
                    </h1>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="release_year"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>