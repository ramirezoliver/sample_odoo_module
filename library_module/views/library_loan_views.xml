<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="loaned_order_view_form">
        <field name="name">Loaned Books</field>
        <field name="model">library.loaned</field>
        <field name="arch" type="xml">
            <form string="Loaned Book">
                <sheet>
                    <group>
                        <field name="book_id" />
                        <field name="user_id" />
                        <field name="loan_date" />
                        <field name="due_date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id="library_loaned_kanban" model="ir.ui.view">
        <field name="name">library.loaned.view.kanban</field>
        <field name="model">library.loaned</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="book_id"/>
                <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_card oe_kanban_global_click">
                        <div class="oe_kanban_content">
                            <div>
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                            </div>
                            <div class="text-muted o_kanban_record_subtitle">
                                <field name="user_id"/>
                            </div>
                            <div class="oe_kanban_bottom_right">
                                <img t-att-src="kanban_image('library.book', 'image', record.book_id.raw_value)" width="24" height="24" class="oe_kanban_avatar float-right" alt="Plant Image"/>
                            </div>
                        </div>
                        <div class="oe_clear"></div>
                    </div>
                </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_library_loaned">
        <field name="name">Loaned Books</field>
        <field name="res_model">library.loaned</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <menuitem name="Loaned Books" id="library_loaned_menu" parent="library_root_menu"
              sequence="3" action="action_library_loaned"/>
</odoo>